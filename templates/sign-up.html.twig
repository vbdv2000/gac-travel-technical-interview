{% extends 'base.html.twig' %}

{% block title %}Registro - Stockify{% endblock %}

{% block body %}
<div class="wrapper">
            <section class="login-content">
                <div class="container">
                    <div class="row align-items-center justify-content-center height-self-center">
                        <div class="col-lg-8">
                            <div class="card auth-card">
                                <div class="card-body p-0">
                                    <div class="d-flex align-items-center auth-content">
                                        <div class="col-lg-7 align-self-center">
                                            <div class="p-3">
                                                <h2 class="mb-2">Nuevo registro</h2>
                                                <form action="{{    path('app_users_new')    }}" method="post">
                                                    <div class="row">
                                                        <div class="col-lg-12">
                                                            <div class="floating-label form-group">
                                                                {{ form_label(form.username,'Usuario') }}                                                                
                                                                {{ form_widget(form.username,{'attr':{'class':'form-control'}}) }}
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-12">
                                                            <div class="floating-label form-group">
                                                                {{ form_label(form.password,'Contraseña') }}
                                                                {{ form_widget(form.password,{'attr':{'class':'form-control'}}) }}
                                                            </div>
                                                        </div>   
                                                    </div>
                                                    {{  form_rest(form) }}
                                                    <button type="submit" class="btn btn-primary">Crear cuenta</button>
                                                    <p class="mt-3">
                                                        ¿Ya tienes una cuenta? <a href="index.html" class="text-primary">Accede a Stockify</a>
                                                    </p>
                                                </form>
                                            </div>
                                        </div>
                                        <div class="col-lg-5 content-right">
                                            <img src="assets/images/login/01.png" class="img-fluid image-right" alt="">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
{% endblock %}